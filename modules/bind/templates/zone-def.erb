// bind9 zone definition fragment: <%= zone %>
zone "<%= zone %>" {
	type <%= zonetype %>;
<% if defined? zonefile then -%>
	file "<%= zonefile %>";
<% end -%>
<% if defined? masters and masters.length > 0 then -%>
	masters {
<% masters.each do |ip| -%>
		<%= ip %>;
<% end -%>
	};
<% end -%>
<% if defined? forwarders and forwarders.length > 0 then -%>
	forwarders {
<% forwarders.each do |ip| -%>
		<%= ip %>;
<% end -%>
	};
<% end -%>
};
// end of <%= zone %> fragment

