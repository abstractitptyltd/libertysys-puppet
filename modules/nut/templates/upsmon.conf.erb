DEADTIME 15
FINALDELAY 5
HOSTSYNC 15
MINSUPPLIES 1
MONITOR <%= upsname %>@<%= mastername %> <%= numsupplies %> <%= username %> <%= password %> <%= mode %>
NOCOMMWARNTIME 300
POLLFREQ 5
POLLFREQALERT 5
POWERDOWNFLAG /etc/killpower
RBWARNTIME 86400
# RUN_AS_USER nutmon
SHUTDOWNCMD "/sbin/shutdown -h +0"
